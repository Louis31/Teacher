<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".module.shop.ShopAddressActivity">


    <com.haiku.wateroffer.ui.widget.Titlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_address_tip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_height"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="@string/address" />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="@dimen/common_height"
            android:layout_height="@dimen/common_height"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@id/iv_location"
            android:layout_toRightOf="@id/tv_address_tip"
            android:gravity="center_vertical"
            android:text="@string/hint_shop_addr"
            android:textColor="@color/black" />

        <View
            android:id="@+id/line"
            style="@style/line_h"
            android:layout_below="@id/tv_address_tip" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:layout_alignLeft="@id/tv_address"
            android:layout_below="@id/line"
            android:background="@color/white"
            android:hint="@string/hint_shop_addr_detail"
            android:paddingRight="12dp"
            android:textSize="@dimen/tsize_normal" />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/selector_circ_red"
        android:text="@string/shop_open"
        android:textColor="@color/white"
        android:textSize="@dimen/tsize_normal" />


</LinearLayout>
