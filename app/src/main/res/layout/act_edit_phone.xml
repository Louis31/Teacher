<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.haiku.wateroffer.mvp.view.widget.Titlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height" />

    <EditText
        android:id="@+id/et_phone_old"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:hint="@string/hint_phone_old"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="@dimen/tsize_normal" />

    <View
        style="@style/line_h"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_phone_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/hint_phone_new"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="@dimen/tsize_normal" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/line" />

        <TextView
            android:id="@+id/tv_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/get_verify_code"
            android:textColor="@color/black"
            android:textSize="@dimen/tsize_big" />
    </LinearLayout>

    <View
        style="@style/line_h"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

    <EditText
        android:id="@+id/et_verify_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@null"
        android:hint="@string/hint_verify_code"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="@dimen/tsize_normal" />

    <View
        style="@style/line_h"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/hint_use_new_account"
        android:textColor="@color/black" />
</LinearLayout>
