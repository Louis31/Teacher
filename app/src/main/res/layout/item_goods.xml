<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/iv_goods"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="农夫山泉有点甜农夫山泉有点甜农夫山泉有点甜农夫山泉有点甜农夫山泉有点甜农夫山泉有点甜"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_goods_price_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goods_name"
                android:layout_marginTop="4dp"
                android:text="@string/goods_price_tip" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goods_name"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/tv_goods_price_tip"
                android:text="200.00"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_goods_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goods_price_tip"
                android:layout_marginTop="4dp"
                android:text="@string/goods_sale_tip" />

            <TextView
                android:id="@+id/tv_goods_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goods_price_tip"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/tv_goods_sale"
                android:text="@string/goods_stock_tip" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/line_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            style="@style/goods_item_tv"
            android:text="@string/delete" />

        <View style="@style/goods_item_line_v" />

        <TextView
            android:id="@+id/tv_off_shelf"
            style="@style/goods_item_tv"
            android:text="@string/off_shelf" />

        <View style="@style/goods_item_line_v" />

        <TextView
            android:id="@+id/tv_up_shelf"
            style="@style/goods_item_tv"
            android:text="@string/up_shelf" />

        <View style="@style/goods_item_line_v" />

        <TextView
            android:id="@+id/tv_edit"
            style="@style/goods_item_tv"
            android:text="@string/edit" />
    </LinearLayout>


</LinearLayout>
