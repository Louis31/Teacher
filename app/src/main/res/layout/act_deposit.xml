<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".module.shop.DepositActivity">

    <com.haiku.wateroffer.ui.widget.Titlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="为了规范市场秩序就，保证为顾客提供物美价廉的商品。现规定新商家必须缴纳100元的保证金后添加的商品才会在买家端显示"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/selector_circ_green"
        android:text="@string/wechat_payment"
        android:textColor="@color/white"
        android:textSize="@dimen/tsize_normal" />

    <Button
        android:id="@+id/btn_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/selector_circ_blue"
        android:text="@string/alipay_payment"
        android:textColor="@color/white"
        android:textSize="@dimen/tsize_normal" />
</LinearLayout>
