<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.haiku.wateroffer.mvp.view.widget.Titlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="为了规范市场秩序就，保证为顾客提供物美价廉的商品。现规定新商家必须缴纳100元的保证金后添加的商品才会在买家端显示"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_wechat"
        style="@style/btn_common_green"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="48dp"
        android:text="@string/wechat_payment" />

    <Button
        android:id="@+id/btn_alipay"
        style="@style/btn_common_blue"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="24dp"
        android:text="@string/alipay_payment" />
</LinearLayout>
