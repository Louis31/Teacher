<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_order_number_tip"
            style="@style/order_detail_tv_l"
            android:layout_marginTop="0dp"
            android:text="订单号：" />

        <TextView
            android:id="@+id/tv_order_number"
            style="@style/order_detail_tv_r"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/tv_order_number_tip"
            android:text="35432164" />

        <TextView
            android:id="@+id/tv_order_status_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_order_number_tip"
            android:text="订单状态：" />

        <TextView
            android:id="@+id/tv_order_status"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_order_number_tip"
            android:layout_toRightOf="@id/tv_order_status_tip"
            android:text="待付款"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/tv_order_time_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_order_status_tip"
            android:text="订单状态：" />

        <TextView
            android:id="@+id/tv_order_time"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_order_status_tip"
            android:layout_toRightOf="@id/tv_order_time_tip"
            android:text="2015-01-23" />
    </RelativeLayout>

    <View style="@style/line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_deliver_name_tip"
            style="@style/order_detail_tv_l"
            android:layout_marginTop="0dp"
            android:text="姓名：" />

        <TextView
            android:id="@+id/tv_deliver_name"
            style="@style/order_detail_tv_r"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/tv_deliver_name_tip"
            android:text="小李" />

        <TextView
            android:id="@+id/tv_deliver_phone_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_deliver_name_tip"
            android:text="电话：" />

        <TextView
            android:id="@+id/tv_deliver_phone"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_deliver_name_tip"
            android:layout_toRightOf="@id/tv_deliver_phone_tip"
            android:text="46754613" />

        <TextView
            android:id="@+id/tv_deliver_addr_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_deliver_phone_tip"
            android:text="地址：" />

        <TextView
            android:id="@+id/tv_deliver_addr"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_deliver_phone_tip"
            android:layout_toRightOf="@id/tv_deliver_addr_tip"
            android:text="广东省天河区上社" />

        <TextView
            android:id="@+id/tv_deliver_time_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_deliver_addr_tip"
            android:text="送达时间：" />

        <TextView
            android:id="@+id/tv_deliver_time"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_deliver_addr_tip"
            android:layout_toRightOf="@id/tv_deliver_time_tip"
            android:text="2015-01-23" />

        <TextView
            android:id="@+id/tv_deliver_remark_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_deliver_time_tip"
            android:text="备注：" />

        <TextView
            android:id="@+id/tv_deliver_remark"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_deliver_time_tip"
            android:layout_toRightOf="@id/tv_deliver_remark_tip"
            android:text="悲伤说的分离机都是风景是范德萨发生了贷款" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/colorPrimary" />
</LinearLayout>
