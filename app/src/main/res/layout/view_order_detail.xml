<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_order_number_tip"
            style="@style/order_detail_tv_l"
            android:layout_marginTop="0dp"
            android:text="@string/order_number_tip" />

        <TextView
            android:id="@+id/tv_order_number"
            style="@style/order_detail_tv_r"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/tv_order_number_tip" />

        <TextView
            android:id="@+id/tv_order_status_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_order_number_tip"
            android:text="@string/order_status_tip" />

        <TextView
            android:id="@+id/tv_order_status"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_order_number_tip"
            android:layout_toRightOf="@id/tv_order_status_tip"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/tv_order_time_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_order_status_tip"
            android:text="@string/order_ordertime_tip" />

        <TextView
            android:id="@+id/tv_order_time"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_order_status_tip"
            android:layout_toRightOf="@id/tv_order_time_tip" />
    </RelativeLayout>

    <View style="@style/line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_deliver_name_tip"
            style="@style/order_detail_tv_l"
            android:layout_marginTop="0dp"
            android:text="@string/name_tip" />

        <TextView
            android:id="@+id/tv_deliver_name"
            style="@style/order_detail_tv_r"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/tv_deliver_name_tip" />

        <TextView
            android:id="@+id/tv_deliver_phone_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_deliver_name_tip"
            android:text="@string/phone_tip" />

        <TextView
            android:id="@+id/tv_deliver_phone"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_deliver_name_tip"
            android:layout_toRightOf="@id/tv_deliver_phone_tip" />

        <TextView
            android:id="@+id/tv_deliver_addr_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_deliver_phone_tip"
            android:text="@string/address_tip" />

        <TextView
            android:id="@+id/tv_deliver_addr"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_deliver_phone_tip"
            android:layout_toRightOf="@id/tv_deliver_addr_tip" />

        <TextView
            android:id="@+id/tv_deliver_time_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_deliver_addr_tip"
            android:text="@string/order_delivertime_tip" />

        <TextView
            android:id="@+id/tv_deliver_time"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_deliver_addr_tip"
            android:layout_toRightOf="@id/tv_deliver_time_tip" />

        <TextView
            android:id="@+id/tv_deliver_remark_tip"
            style="@style/order_detail_tv_l"
            android:layout_below="@id/tv_deliver_time_tip"
            android:text="@string/remark_tip" />

        <TextView
            android:id="@+id/tv_deliver_remark"
            style="@style/order_detail_tv_r"
            android:layout_below="@id/tv_deliver_time_tip"
            android:layout_toRightOf="@id/tv_deliver_remark_tip" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llayout_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <RelativeLayout style="@style/order_list_pay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_up_pay"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_order_amount"
            style="@style/order_list_pay_tv" />
    </RelativeLayout>

    <View style="@style/line_h" />

    <FrameLayout
        android:id="@+id/flayout_bottom"
        style="@style/order_list_bottom"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_order_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/order_finish"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_cancel"
            style="@style/order_list_bottom_btn"
            android:text="@string/order_cancel"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_send"
            style="@style/order_list_bottom_btn"
            android:text="@string/order_send"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
