<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.shop.DeliverListActivity">

    <com.haiku.wateroffer.ui.widget.Titlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tab_deliver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/deliver_list"
            android:textColor="@color/red" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/line" />

        <TextView
            android:id="@+id/tv_tab_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/edit_list" />

    </LinearLayout>

    <View style="@style/line_h" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 编辑列表 -->
        <com.haiku.wateroffer.ui.widget.MyRefreshLayout
            android:id="@+id/refresh_layout_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!-- 配送员列表 -->
        <com.haiku.wateroffer.ui.widget.MyRefreshLayout
            android:id="@+id/refresh_layout_deliver"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>
